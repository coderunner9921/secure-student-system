<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#667eea"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“"
                android:textSize="60sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create New Account"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register for Secure Student Portal"
                android:textSize="14sp"
                android:textColor="#BBFFFFFF"/>
        </LinearLayout>

        <!-- Registration Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Required Fields Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” Required Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Username -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ðŸ‘¤"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginRight="12dp"/>

                    <EditText
                        android:id="@+id/etRegUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username *"
                        android:textSize="16sp"
                        android:background="@null"
                        android:padding="0dp"/>
                </LinearLayout>

                <!-- Password -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ðŸ”’"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginRight="12dp"/>

                    <EditText
                        android:id="@+id/etRegPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password * (min 6 chars)"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:background="@null"
                        android:padding="0dp"/>
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ðŸ“§"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginRight="12dp"/>

                    <EditText
                        android:id="@+id/etRegEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email *"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:background="@null"
                        android:padding="0dp"/>
                </LinearLayout>

                <!-- Optional Student Data Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ“ Student Information (Optional)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Student ID -->
                <EditText
                    android:id="@+id/etStudentId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Student ID"
                    android:background="@drawable/edittext_background"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Full Name -->
                <EditText
                    android:id="@+id/etFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:background="@drawable/edittext_background"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Department -->
                <EditText
                    android:id="@+id/etDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Department"
                    android:background="@drawable/edittext_background"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Semester and GPA Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <EditText
                        android:id="@+id/etSemester"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Semester"
                        android:inputType="number"
                        android:background="@drawable/edittext_background"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/etGPA"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="GPA"
                        android:inputType="numberDecimal"
                        android:background="@drawable/edittext_background"
                        android:padding="16dp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Buttons -->
                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸš€ Create Account"
                    android:textAllCaps="false"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnBackToLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”™ Back to Login"
                    android:textAllCaps="false"
                    android:backgroundTint="#2196F3"/>

                <!-- Status -->
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ready to register"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:padding="12dp"
                    android:background="@drawable/status_background"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All data is securely encrypted and transmitted"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#88FFFFFF"/>
    </LinearLayout>
</ScrollView>