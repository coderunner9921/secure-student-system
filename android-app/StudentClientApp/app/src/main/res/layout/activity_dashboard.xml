<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_dashboard"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘‹ Welcome!"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/tvUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student ID: Loading..."
                android:textSize="14sp"
                android:textColor="#BBFFFFFF"/>
        </LinearLayout>

        <!-- Logout Button -->
        <TextView
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸšª Logout"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/button_background"/>
    </LinearLayout>

    <!-- Feature Cards -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card 1: View Data -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewData"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ“Š"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Student Data"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check your academic records"
                            android:textSize="14sp"
                            android:textColor="#666666"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="â€º"
                        android:textSize="24sp"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Submit Request -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSubmitRequest"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ“¨"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Submit Request"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send complaints or requests"
                            android:textSize="14sp"
                            android:textColor="#666666"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="â€º"
                        android:textSize="24sp"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3: View Requests -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewRequests"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ“‹"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View My Requests"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check request status"
                            android:textSize="14sp"
                            android:textColor="#666666"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="â€º"
                        android:textSize="24sp"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- GPA and Attendance Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- GPA Card - FIXED -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGPA"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    android:layout_marginEnd="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="#FFE8F5E9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="â­"
                            android:textSize="28sp"
                            android:gravity="center"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:id="@+id/tvGPA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="---"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#2E7D32"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GPA"
                            android:textSize="14sp"
                            android:textColor="#666666"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Attendance Card - FIXED -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAttendance"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    android:layout_marginStart="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="#FFF3E5F5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="ðŸ“Š"
                            android:textSize="28sp"
                            android:gravity="center"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:id="@+id/tvAttendance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="---"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#7B1FA2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ATTENDANCE %"
                            android:textSize="11sp"
                            android:textColor="#666666"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Response Area -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¡ Server Response"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <TextView
                            android:id="@+id/tvResponse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘ˆ Select an option to begin"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp"/>
                    </ScrollView>

                    <!-- Connection Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/connectionLight"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_red"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/tvConnectionStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Disconnected"
                            android:textSize="12sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”’ ENCRYPTED"
                            android:textSize="10sp"
                            android:textColor="#4CAF50"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:background="#E8F5E9"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Security Badge -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ” Encrypted Socket Connection â€¢ SHA-256 Hashing â€¢ Secure Database"
        android:textSize="11sp"
        android:gravity="center"
        android:textColor="#88FFFFFF"
        android:layout_marginTop="8dp"/>

</LinearLayout>